<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.enters.book_reader.FavoriteActivity"
    android:background="@color/background_color">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/background_color"
        android:id="@+id/cardViewTitle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/background_color"
            android:id="@+id/relative01">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:src="@drawable/logo" />


            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/imageView"
                android:fontFamily="@font/chicleregular"
                android:text="Book Reader"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="#FFF"
                android:textSize="50sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/cardViewTitle"
        android:background="@color/background_color"
        android:id="@+id/cardViewSearch">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cardView3"
        android:background="@color/background_color"
        android:id="@+id/relative02"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewSearch"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_search_books" />

        <TextView
            android:id="@+id/textViewSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewSearch"
            android:layout_marginEnd="8dp"
            android:text="Search Books"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:fontFamily="@font/chicleregular"
            android:textSize="30sp"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/cardViewSearch"
        android:background="@color/background_color"
        android:id="@+id/cardViewFavorite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cardView3"
        android:background="@color/background_color"
        android:id="@+id/relative03"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewFavorite"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_favorite_books" />

        <TextView
            android:id="@+id/textViewFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewFavorite"
            android:layout_marginEnd="8dp"
            android:text="Favorite Books"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:fontFamily="@font/chicleregular"
            android:textSize="30sp"/>

    </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>